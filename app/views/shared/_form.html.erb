<%= form_for(project) do |f| %>

  <div class="jumbotron">
    <div class="row">
      <div class="col-md-5">
        
        <h5>Thumb Image</h5>
        <div class="form-group">
          <div class="file-drop-area">
            <span class="fake-btn btn btn-primary submit">Choose thumb img</span><br/>
            <span class="file-msg js-set-number">or drag and drop files here</span>
            <%= f.file_field :thumb_image, class: 'file-input' %>
          </div>
        </div>
        
        
        <h5>Main Images</h5>
        <div class="form-group">
          <div class="file-drop-area">
            <span class="fake-btn btn btn-primary submit">Choose 1st img</span><br/>
            <span class="file-msg js-set-number">or drag and drop files here</span>
            <%= f.file_field :image_1, class: 'file-input' %>
          </div>
          
          <div class="file-drop-area">
            <span class="fake-btn btn btn-primary submit">Choose 2nd img</span><br/>
            <span class="file-msg js-set-number">or drag and drop files here</span>
            <%= f.file_field :image_2, class: 'file-input' %>
          </div>

          <div class="file-drop-area">
            <span class="fake-btn btn btn-primary submit">Choose 3rd img</span><br/>
            <span class="file-msg js-set-number">or drag and drop files here</span>
            <%= f.file_field :image_3, class: 'file-input' %>
          </div>

          <div class="file-drop-area">
            <span class="fake-btn btn btn-primary submit">Choose 4th img</span><br/>
            <span class="file-msg js-set-number">or drag and drop files here</span>
            <%= f.file_field :image_4, class: 'file-input' %>
          </div>

          <div class="file-drop-area">
            <span class="fake-btn btn btn-primary submit">Choose 5th img</span><br/>
            <span class="file-msg js-set-number">or drag and drop files here</span>
            <%= f.file_field :image_5, class: 'file-input' %>
          </div>
        </div>
      </div>

      <div class="col-md-7">
        <h5>Title</h5>
        <div class="form-group">
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <h5>Content | Description</h5>
        <div class="form-group">
          <%= f.text_area :body, class: 'form-control', rows: 10 %>
        </div>
      </div>
    </div>

    <div class="display-inline-block">
      <span class="btn btn-primary back">
        <%= link_to '', projects_path, class: "fa fa-chevron-circle-left fa-lg" %>
      </span>
      <span>
        <%= f.submit "Submit", class: 'btn btn-primary submit' %>
      </span>
    </div>
  </div>

  <script type="text/javascript">
    var $fileInput = $('.file-input');
    var $droparea = $('.file-drop-area');

    // highlight drag area
    $fileInput.on('dragenter focus click', function() {
      $droparea.addClass('is-active');
    });

    // back to normal state
    $fileInput.on('dragleave blur drop', function() {
      $droparea.removeClass('is-active');
    });

    // change inner text
    $fileInput.on('change', function() {
      var filesCount = $(this)[0].files.length;
      var $textContainer = $(this).prev('.js-set-number');

      if (filesCount === 1) {
        // if single file then show file name
        $textContainer.text($(this).val().split('\\').pop());
      } else {
        // otherwise show number of files
        $textContainer.text(filesCount + ' files selected');
      }
    });
  </script>
  
<% end %>









