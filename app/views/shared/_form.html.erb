<%= form_for(project) do |f| %>

  <div class="jumbotron">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.file_field :thumb_image %>
        </div>
        <div class="form-group">
          <%= f.file_field :image_1 %>
        </div>
      </div>

      <div class="col-md-6">
        <h5>Title</h5>
        <div class="form-group">
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <h5>Content | Description</h5>
        <div class="form-group">
          <%= f.text_area :body, class: 'form-control', rows: 10 %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="display-inline-block">
        <span class="btn btn-primary back">
          <%= link_to '', projects_path, class: "fa fa-chevron-circle-left fa-lg" %>
        </span>
        <span>
          <%= f.submit "Submit", class: 'btn btn-primary submit' %>
        </span>
      </div>
    </div>
  </div>
  
<% end %>