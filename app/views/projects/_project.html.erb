<div class="card">
  <%= image_tag("placeholder.jpg", size: "350x200", :alt => "Theres usually an image here") %>
  <h4><%= link_to project.title, project %></h4>
    <span class="card-text">Posted <%= distance_of_time_in_words(project.created_at, Time.now) %> ago</span>

  <div class="display-inline-block">
    <span class="btn btn-default edit", aria-label="Edit">
      <%= link_to '', edit_project_path(project), class: "fa fa-pencil-square-o fa-lg" if logged_in?(:site_admin) %>
    </span>
    <span class="btn btn-danger delete", aria-label="Delete">
      <%= link_to '', project, class: "fa fa-trash-o fa-lg", method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
    </span>
  </div>
</div>