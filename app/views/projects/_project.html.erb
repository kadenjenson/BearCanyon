<tr>
  <td><%= project.title %></td>
  <td><%= distance_of_time_in_words(project.created_at, Time.now) %> ago</td>
  <td><%= project.body %></td>
  <td><%= link_to 'Show', project %></td>
  <td><%= link_to 'Edit', edit_project_path(project) if logged_in?(:site_admin) %></td>
  <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></td>
</tr>